{
    "compilerOptions": {
        "allowJs": true,
        "module": "ES6",
        "jsx": "preserve",
        "declaration": true,
        "noImplicitAny": true,
        "lib": [
            "es2019"
        ],
        "outDir": "."
    },
    "exclude": [
        "node_modules",
        "public",
        ".vscode",
        "./tests/node_modules",
        "./apostrophe/test-lib/test.js",
        ".stylelintrc",
        "./*.js"
    ],
    "include": [
        "./tests/**/*.js",
        "./ui/apos/**/*.js",
        "./ui/apos/**/*.vue",
        "./lib/**/*.js",
        "index.js"
    ]
}